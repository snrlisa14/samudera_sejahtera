<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Daftar Nelayan</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesview.css">

    <script>
        function confirmAction(message, url) {
            if (confirm(message)) {
                window.location.href = url;
            }
        }
    </script>
</head>
<body>
    <h1>Daftar Nelayan</h1>
    <div class="container">
        <div class="alert alert-info text-center" role="alert">
            Berikut adalah daftar nelayan yang terdaftar.
        </div>
        <table class="table table-bordered table-hover">
            <thead class="table-primary">
                <tr>
                    <th>ID</th>
                    <th>Nama Nelayan</th>
                    <th>Alamat</th>
                    <th>Aksi</th>
                </tr>
            </thead>
            <tbody>
                <% nelayan.forEach(nelayan => { %>
                    <tr>
                        <td><%= nelayan.id %></td>
                        <td><%= nelayan.nama %></td>
                        <td><%= nelayan.alamat %></td>
                        <td>
                            <a href="/add" class="btn btn-success btn-sm" onclick="confirmAction('Apakah Anda yakin ingin menambah nelayan baru?', '/nelayan/add'); return false;">Tambah</a>
                            <a href="/edit" class="btn btn-warning btn-sm" onclick="confirmAction('Apakah Anda yakin ingin mengedit data nelayan ini?', '/nelayan/edit/<%= nelayan.id %>'); return false;">Edit</a>
                            <form action="/nelayan/delete/<%= nelayan.id %>" method="POST" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Apakah Anda yakin ingin menghapus data nelayan ini?');">Hapus</button>
                            </form>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
    <a href="/auth/profile" class="btn btn-secondary">Kembali ke daftar nelayan</a>
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
